{
  "public": true,
  "version": 2,
  "builds": [
    {
      "src": "public/index.php",
      "use": "@vercel/php"
    },
    {
      "src": "public/assets/css/*",
      "use": "@vercel/static"
    },
    {
      "src": "public/assets/js/*",
      "use": "@vercel/static"
    },
    {
      "src": "public/assets/media/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/", "dest": "/index.php" },
    { "src": "/assets/(.*)", "dest": "/public/assets/$1" },
    { "src": "/api/(.*)", "dest": "/api/$1" }
  ],
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.3"
    }
  }
}
